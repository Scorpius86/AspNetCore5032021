@model IEnumerable<CourseViewModel>

<h3>List Course</h3>
<br />
<a asp-action="Create">Create Course</a>
<br />
<br />
<table class="table table-reflow table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CourseId) </th>
            <th>@Html.DisplayNameFor(model => model.Description) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (CourseViewModel course in Model)
        {
            <tr>
                <th scope="row">@course.CourseId</th>
                <td>@course.Description</td>
                <td>
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId" data-toggle="tooltip" data-placement="top" title="Details"><span class="fa fa-info-circle"></span></a>&nbsp;&nbsp;
                    <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.CourseId" data-toggle="tooltip" data-placement="top" title="Edit"><span class="fa fa-edit"></span></a>&nbsp;&nbsp;
                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.CourseId" data-toggle="tooltip" data-placement="top" title="Delete"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {

}