    <div class="col-md-6">
        <div class="card">
            <h4 class="card-header">Course Details.</h4>
            <div class="card-body">
                <fieldset disabled>
                    <div class="form-group">
                        <label asp-for="CourseId"></label>
                        <input asp-for="CourseId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>                    
