@model GradeViewModel

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <h4 class="card-header">Edit grade.</h4>
            <form asp-action="Edit" method="post" onsubmit="beforeSave()">
                <div class="card-body">
                    <fieldset>
                        <input type="hidden" asp-for="@Model.GradeId" />
                        <input type="hidden" asp-for="@Model.CourseId"/>
                        <input type="hidden" asp-for="@Model.StudentId"/>
                        <div class="form-group">
                            <label asp-for="GradeId"></label>
                            <input asp-for="GradeId" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Student.FullName"></label>
                            <input asp-for="Student.FullName" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Course.Description"></label>
                            <input asp-for="Course.Description" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Value"></label>
                            <input asp-for="Value" class="form-control" />
                        </div>
                    </fieldset>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div>
    <a asp-controller="Grades" asp-action="List" asp-route-id="@Model.StudentId">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}