@model StudentViewModel

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <h4 class="card-header">Student Details.</h4>            
            <div class="card-body">
                <fieldset disabled>
                    <div class="form-group">
                        <label asp-for="StudentId"></label>
                        <input asp-for="StudentId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SurName"></label>
                        <input asp-for="SurName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="User.UserName"></label>
                        <input asp-for="User.UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="GradesAverage"></label>
                        <input asp-for="GradesAverage" class="form-control" />
                    </div>
                </fieldset>
            </div>            
        </div>
    </div>
</div>
<br />
<div>
    <a asp-controller="Students" asp-action="Edit" asp-route-id="@Model.StudentId">Edit</a> |
    <a asp-controller="Students" asp-action="Delete" asp-route-id="@Model.StudentId">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>

