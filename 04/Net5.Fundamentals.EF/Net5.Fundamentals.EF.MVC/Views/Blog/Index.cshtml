@model List<PostViewModel>

@foreach (PostViewModel post in Model)
{
<div class="post">
    <h3><a class="post-title entry-title" href="#">@post.Titulo</a></h3>
    <div class="postmeta-primary">
        <span class="meta_pbtauthor">
            By&nbsp;<a href="#" rel="author" title="author profile">@post.UsuarioPropietario.NombreCompleto</a>
        </span>&nbsp;
        <span class="meta_date">@post.FechaActualizacion</span>&nbsp;
        <span class="meta_comments">
            <a href="#" onclick="">@post.Comentarios.Count comments</a>
        </span>
    </div>
    <div class="post-body entry-content">
        <div>
            @post.Resumen
        </div>
        <div class="readmore">
            <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.PostId">Read More</a>
        </div>
        <div style="clear: both;"></div>
    </div>
</div>
}